for path, subdirs, files in os.walk(src):
	for name in files:
		filename = os.path.join(path,name)		
		Lokalitet = os.path.splitext(os.path.split(name)[1])[0].rsplit("_", 1)[0]
		print(Lokalitet)
		Date = str(strftime("%Y-%m-%d", gmtime(os.path.getmtime(filename))))
